<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="HavenlyBookingApp.Views.PolicyView"
             BackgroundColor="#EDE7F6">
    <VerticalStackLayout>
        <skia:SKLottieView
            Source="CloudsPassing.json"
            RepeatCount="-1"
            RepeatMode="Restart"
            HeightRequest="70"
            WidthRequest="410"
            Margin="0,20,0,0"/>
        <Image Source="havenly_transparent.PNG" Margin="0,150,0,0"/>
        <Label 
            Text="Havenly is an all-in-one booking platform that connects client with customer. Whether you’re planning a weekend getaway, a business trip, or a holiday, you’ll spend less time planning and more time enjoying your safe haven."
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            Margin="40,40"/>
        <skia:SKLottieView
            x:Name="Clouds"
            Source="CloudsPassing.json"
            RepeatCount="-1"
            RepeatMode="Reverse"
            HeightRequest="70"
            WidthRequest="410"
            Margin="0,20,0,0"/>
        <HorizontalStackLayout
            HorizontalOptions="Center">
            <Label 
                Grid.Column="0"
                Text="By continuing, you agree to our"
                Margin="40,90,0,0"
                FontSize="10"
                FontAttributes="Italic"/>
            <Label
                Text="Privacy Policy*"
                TextColor="#3700B3"
                Margin="0,90,40,0"
                FontSize="10"
                FontAttributes="Italic">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="PrivacyPolicyTapped" />
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
        <Button
              Text="I Agree"
              TextColor="White"
              Clicked="Agree_Clicked"
              WidthRequest="100"
              Margin="0,10,0,0"
              BackgroundColor="Black"/>
    </VerticalStackLayout>
</ContentPage>