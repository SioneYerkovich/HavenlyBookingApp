<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HavenlyBookingApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HavenlyBookingApp"
    xmlns:views="clr-namespace:HavenlyBookingApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False"
    Title="Booking Application"
    BackgroundColor="#000000">

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>
        <VerticalStackLayout Padding="30" Spacing="15" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="logo.png"
                   Aspect="AspectFit"
                   HeightRequest="120"
                   WidthRequest="120" />
            <Label Text="Booking Application"
                   FontAttributes="Bold"
                   FontSize="24"
                   TextColor="#D4AF37"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <!-- Flyout Items -->
    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Login"
            ContentTemplate="{DataTemplate local:LoginPage}"
            Route="MainPage"
            Icon="home.png" />

        <ShellContent
            Title="Contact Us"
            ContentTemplate="{DataTemplate local:ContactUs}"
            Route="ContactUs"
            Icon="contact.png" />

        <ShellContent
            Title="About Us"
            ContentTemplate="{DataTemplate local:AboutUS}"
            Route="AboutUS"
            Icon="about.png" />
    </FlyoutItem>

    <!-- Optional: Flyout Item Styling -->
    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="ShellItem">
                <Setter Property="Shell.BackgroundColor" Value="#1C1C1C" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

</Shell>
